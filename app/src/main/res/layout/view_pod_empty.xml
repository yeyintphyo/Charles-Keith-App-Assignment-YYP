<?xml version="1.0" encoding="utf-8"?>
<com.padcmyanmar.charles_keith_app_assignment_yyp.viewpods.EmptyViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_empty_img"
        android:layout_width="@dimen/emptyImageWidth"
        android:layout_height="@dimen/emptyImageHeight"
        android:layout_centerInParent="true"
        tools:src="@drawable/empty_data_placeholder" />

    <TextView
        android:id="@+id/tv_empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_empty_img"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/margin_medium_2"
        tools:text="No data available!" />

</com.padcmyanmar.charles_keith_app_assignment_yyp.viewpods.EmptyViewPod>